<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_gravity="center"
    android:background="@drawable/btn_bglboutlinewhite"
    android:orientation="vertical"
    android:layout_margin="10dp"

   >



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Claim Recieved!"
        android:textStyle="bold"
        android:textSize="20sp"
        android:gravity="center"
        android:fontFamily="@font/opensansregular"
        android:layout_marginTop="10dp"
        android:textColor="@color/purple"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:src="@drawable/claimdone"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="You can track the status of your order in your profile"
        android:textSize="15sp"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:fontFamily="@font/opensansregular"
        android:layout_marginRight="10dp"
        android:textColor="@color/colorPrimary"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/layoutmypurchases"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/et_bordergray11">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="7dp"
                android:text="My Claims"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:fontFamily="@font/opensansregular"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layoutrateapp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"

            android:background="@drawable/btn_bg1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="7dp"
                android:text="Rate Us"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:fontFamily="@font/opensansregular"

                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>