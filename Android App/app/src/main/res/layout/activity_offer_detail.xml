<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".Activity.LiveDetailActivity">

    <include layout="@layout/activity_toolbar"/>
    <include layout="@layout/activity_loading"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imgItemImg"
            android:layout_width="match_parent"
            android:scaleType="fitXY"
            android:background="@drawable/img_background"
            android:layout_height="220dp">

        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/txtPay"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/opensansmediam"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:visibility="gone"


            android:paddingRight="5dp"
            android:paddingBottom="5dp"
            android:text=""
            android:textColor="@color/black"
            android:textSize="17dp"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/txtSetName"
                android:layout_width="wrap_content"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginRight="130dp"
                android:layout_alignParentLeft="true"
                android:paddingLeft="5dp"
                android:text=""

                android:textSize="17dp"


                android:layout_alignRight="@+id/txtPay"
                android:fontFamily="@font/opensansmediam"
                android:textColor="@color/white"
                android:paddingRight="5dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/txtPay"
                android:layout_width="wrap_content"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:visibility="gone"
                android:paddingLeft="5dp"
                android:layout_alignParentRight="true"
                android:text="Play For 1000"
                android:textSize="17dp"
                android:drawablePadding="5dp"
                android:fontFamily="@font/opensansmediam"
                android:textColor="@color/black"
                android:paddingRight="5dp"
                android:drawableRight="@drawable/ic_star"
                android:layout_height="wrap_content"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:visibility="gone"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/txtBids"
                android:layout_width="wrap_content"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingRight="7dp"
                android:paddingLeft="7dp"
                android:layout_marginRight="130dp"
                android:layout_alignParentLeft="true"

                android:text="11111 Biddders"

                android:textSize="13dp"
                android:background="@drawable/et_border11"

                android:fontFamily="@font/opensansbold"
                android:textColor="@color/redd"

                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/txtYourr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/et_border11"
                android:fontFamily="@font/opensansbold"

                android:paddingLeft="8dp"
                android:paddingTop="5dp"
                android:paddingRight="8dp"
                android:paddingBottom="5dp"
                android:text="Your Bids"
                android:textColor="@color/redd"
                android:textSize="13dp"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"

                android:layout_alignParentRight="true"
                android:text="Enter Your Address:-"
                android:textSize="15dp"
                android:fontFamily="@font/opensansbold"
                android:textColor="@color/white"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/edForgotNumbid"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp"
                android:hint="Enter your address where you want the prize to get delivered"
                android:background="@drawable/et_bordergray11">

            </EditText>


            <TextView
                android:id="@+id/txtSave"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"

                android:background="@drawable/btn_bg1"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="Place Order"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="20dp" />


        </LinearLayout>
    </LinearLayout>

</LinearLayout>