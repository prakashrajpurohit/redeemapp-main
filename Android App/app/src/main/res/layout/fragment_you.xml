<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".Activity.MainActivity">


    <include layout="@layout/activity_loading">
    </include>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="5dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:padding="5dp"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/imageProfile"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_centerInParent="true"
                android:background="@drawable/img_user"
                android:src="@drawable/img_user"
                app:civ_border_width="0dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtSetName"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="20dp"
                    android:text="Your Name"
                    android:fontFamily="@font/opensansbold"
                    android:textColor="@color/colorPrimary"
                    android:layout_height="wrap_content">
                </TextView>

                <TextView
                    android:id="@+id/txtProfile"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:textSize="18dp"
                    android:drawablePadding="3dp"
                    android:drawableTint="@color/darkgray"
                    android:text="Edit Profile"
                    android:drawableLeft="@drawable/ic_edit"
                    android:fontFamily="@font/opensansmediam"
                    android:textColor="@color/darkgray"
                    android:layout_height="wrap_content">
                </TextView>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical">



            <TextView
                android:id="@+id/text_about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensansmediam"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:drawablePadding="8dp"

                android:text="About"
                android:drawableRight="@drawable/ic_next"
                android:drawableLeft="@drawable/ic_informationne"
                android:drawableTint="@color/darkgray"
                android:textColor="@color/darkgray"
                android:textSize="17dp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/darkgray"></View>

            <TextView
                android:id="@+id/txtHowto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensansmediam"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:drawablePadding="8dp"
                android:text="How to play"
                android:drawableRight="@drawable/ic_next"
                android:drawableLeft="@drawable/ic_about"
                android:drawableTint="@color/darkgray"
                android:textColor="@color/darkgray"
                android:textSize="17dp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/darkgray"></View>

            <TextView
                android:id="@+id/txtPurchase"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensansmediam"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:drawablePadding="8dp"
                android:text="Purchase History"
                android:drawableRight="@drawable/ic_next"
                android:drawableLeft="@drawable/ic_history"
                android:drawableTint="@color/darkgray"
                android:textColor="@color/darkgray"
                android:textSize="17dp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/darkgray"></View>
            <TextView
                android:id="@+id/txtCond"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensansmediam"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:visibility="gone"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:drawablePadding="8dp"
                android:text="Terms and Conditions"
                android:drawableRight="@drawable/ic_next"
                android:drawableLeft="@drawable/ic_condition"
                android:drawableTint="@color/darkgray"
                android:textColor="@color/darkgray"
                android:textSize="17dp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:visibility="gone"
                android:background="@color/darkgray"></View>
            <TextView
                android:id="@+id/txtPrivacy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensansmediam"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:drawablePadding="8dp"
                android:text="Privacy Policy"
                android:drawableRight="@drawable/ic_next"
                android:drawableLeft="@drawable/ic_insurance"
                android:drawableTint="@color/darkgray"
                android:textColor="@color/darkgray"
                android:textSize="17dp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/darkgray"></View>
            <TextView
                android:id="@+id/txtContact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensansmediam"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:drawablePadding="8dp"
                android:text="Contact Us"
                android:drawableRight="@drawable/ic_next"
                android:drawableLeft="@drawable/ic_mail"
                android:drawableTint="@color/darkgray"
                android:textColor="@color/darkgray"
                android:textSize="17dp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/darkgray"></View>
            <TextView
                android:id="@+id/txtShare"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensansmediam"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:drawablePadding="8dp"
                android:text="Share App"
                android:drawableRight="@drawable/ic_next"
                android:drawableLeft="@drawable/ic_sharebox"
                android:drawableTint="@color/darkgray"
                android:textColor="@color/darkgray"
                android:textSize="17dp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/darkgray"></View>


            <TextView
                android:visibility="gone"
                android:id="@+id/txtCoinlist"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensansmediam"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:drawablePadding="8dp"
                android:text="Coin History"
                android:drawableRight="@drawable/ic_next"
                android:drawableLeft="@drawable/ic_bulkcoin"
                android:drawableTint="@color/darkgray"
                android:textColor="@color/darkgray"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/txtBid"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensansmediam"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:drawablePadding="8dp"
                android:text="Bids"
                android:drawableRight="@drawable/ic_next"
                android:drawableLeft="@drawable/ic_bulkcoin"
                android:drawableTint="@color/darkgray"
                android:textColor="@color/darkgray"
                android:textSize="17dp" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:visibility="gone"
                android:background="@color/darkgray"></View>

            <TextView
                android:id="@+id/txtLogout"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensansmediam"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:drawablePadding="8dp"
                android:text="Logout"
                android:drawableRight="@drawable/ic_next"
                android:drawableLeft="@drawable/ic_logout"
                android:drawableTint="@color/darkgray"
                android:textColor="@color/darkgray"
                android:textSize="17dp" />






            <TextView
                android:id="@+id/tv_wallet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensansmediam"
                android:paddingLeft="8dp"
                android:visibility="gone"
                android:paddingRight="8dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:drawablePadding="8dp"
                android:text="Wallet"
                android:drawableLeft="@drawable/ic_wallet"
                android:drawableTint="@color/darkgray"
                android:textColor="@color/darkgray"
                android:textSize="17dp">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your Purchases"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_margin="5dp"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerviwq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp" />
            <TextView
                android:id="@+id/txtnotickets"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your Ordered items will be shown here"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:visibility="gone"
                android:textSize="14sp"/>
        </LinearLayout>


    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="15dp"
        android:visibility="gone"
        android:layout_marginLeft="15dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txtGetCoin"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/opensansbold"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp"

            android:drawableRight="@drawable/ic_information"
            android:text=""
            android:textColor="@color/black"
            android:textSize="20dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:background="@color/lightgray"></View>

        <TextView

            android:id="@+id/text_tran"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/opensansmediam"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp"
            android:drawablePadding="8dp"

            android:drawableLeft="@drawable/ic_transfer"
            android:text="See Transaction history"
            android:textColor="@color/darkgray"
            android:textSize="17dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:background="@color/lightgray"></View>

        <TextView
            android:id="@+id/txtGetCoinHis"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/opensansmediam"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp"
            android:drawablePadding="8dp"

            android:drawableLeft="@drawable/ic_transfer"
            android:text="See coin Transaction history"
            android:textColor="@color/darkgray"
            android:textSize="17dp"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/lightgray">

        </View>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/opensansbold"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp"
            android:text="Buy Coin"
            android:textColor="@color/black"
            android:textSize="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/opensansregular"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp"
            android:text="Use coins to participate in live auction"
            android:textColor="@color/darkgray"
            android:textSize="17dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>






</LinearLayout>